{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "classes/**/*.ts",
    "interfaces/**/*.ts",
    "scripts/**/*.ts",
    "tests/**/*.ts",
    "helpers/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
